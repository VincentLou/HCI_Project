      <body>
      	<div class="container">
      		<!-- h1 through h6 are headers. The higher the number, the smaller the header -->
      		<!-- p means paragraph -->
      		{{#if tagHeading}}
      		<div style="text-align: center">
      			<div class="btn-group">
      				<div class="btn btn-default headerbtn" onclick="window.location='/tagheading';">LifeUp</div>
      				<div class="btn btn-default headerbtn" onclick="window.location='/log_tagheading'">Log</div>
      				<div class="btn btn-default headerbtn" onclick="window.location='/activity_tagheading'">Activity</div>
      				<div class="btn btn-default headerbtn" onclick="window.location='/settings_tagheading'">Options</div>
      			</div>
      		</div>
      		{{else}}
      		<h1 class = "header">LifeUP</h1>
      		{{/if}}

      		<div class = "sub_header1"><a href="#"></a>
      			<img class = "image" src="images/uptrans.png" />
      			<div>
      				<div class= "time_with_title">Life Expectancy:</div>
      				<div class = "time" id="lifespan">{{expLifeSpan}} years </div>
      			</div>
      		</div>
      		<div class = "sub_header2">
      			<div class = "count_down_title">Life Remaining:</div>
      			<div class = "count_down"> </div>
      		</div>
      		{{#if tagHeading}}
      		<div class="btn btn-primary btn-large button" onclick="window.location='/log_tagheading';">Log Activity</div>
      		<div class="btn btn-primary btn-large button" onclick="window.location='/activity_tagheading';">My Activity</div>
      		<div class="btn btn-primary btn-large button" onclick="window.location='/settings_tagheading';">Edit Options</div>
      		{{else}}
      		<div class="btn btn-primary btn-large button" onclick="window.location='/log';">Log Activity</div>
      		<div class="btn btn-primary btn-large button" onclick="window.location='/activity';">My Activity</div>
      		<div class="btn btn-primary btn-large button" onclick="window.location='/settings';">Edit Options</div>
      		{{/if}}
      		<script>
      			var lifeExp = {{expLifeSpan}};
      			var currentAge = {{curAge}};
      			if (displayStyle == 1)
      				$('.sub_header2').hide();
      			else if (displayStyle == 2)
      				$('.sub_header1').hide();
      			var newYear = new Date(); 
      			newYear = new Date(newYear.getFullYear() + lifeExp - currentAge, 1 - 1, 1);
      			$('.count_down').countdown({until: newYear, compact: true, 
      				format: 'YOWDHMS', description: ''});
      			$('.sub_header1').click(function() {
      				$('.sub_header1').hide();
      				$('.sub_header2').show();
      				displayStyle = 2;
      			});
      			$('.sub_header2').click(function() {
      				$('.sub_header2').hide();
      				$('.sub_header1').show();
      				displayStyle = 1;
      			});
      		</script>
